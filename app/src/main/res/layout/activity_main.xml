<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
            android:text="Login com Firebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="E-mail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="64dp"
            android:textColor="@color/colorPrimary" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="32dp"/>
    <TextView
            android:text="Senha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/etEmail"
            app:layout_constraintEnd_toEndOf="@+id/etEmail" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" android:layout_marginTop="32dp" android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etSenha"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="32dp"/>
    <Button
            android:text="ENTRAR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btEntrar" app:layout_constraintStart_toStartOf="@+id/etSenha"
            app:layout_constraintEnd_toEndOf="@+id/etSenha" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etSenha"/>
    <Button
            android:text="CRIAR CONTA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btCriar" app:layout_constraintStart_toStartOf="@+id/btEntrar"
            app:layout_constraintEnd_toEndOf="@+id/btEntrar" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btEntrar"/>
    <Button
            android:text="LIMPAR CAMPOS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btLimpar" app:layout_constraintStart_toStartOf="@+id/btCriar"
            app:layout_constraintEnd_toEndOf="@+id/btCriar" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btCriar"
    />
</androidx.constraintlayout.widget.ConstraintLayout>